%table
    %thead
        %tr
            %th= "Date"
            %th= "Total time"
            %th= "Notes"
    %tbody
        - @tasks.each do |task|
            %tr
                %td= task.date
                %td= "#{task.duration / 3600}h"
                %td
                    %ul
                        - task.notes.each do |note|
                            %li= note.text